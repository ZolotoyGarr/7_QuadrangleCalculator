<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- Appenders: куда записывать логи -->
    <Appenders>
        <!-- Консольный аппендер -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c{1}] - %m%n" />
        </Console>

        <!-- Файловый аппендер -->
        <File name="FileLogger" fileName="logs/application.log" append="true">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c{1}] - %m%n" />
        </File>
    </Appenders>

    <!-- Логеры: какие классы логировать -->
    <Loggers>
        <!-- Логгер для пакета org.example -->
        <Logger name="org.example" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileLogger" />
        </Logger>

        <!-- Root Logger (глобальный логгер) -->
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileLogger" />
        </Root>
    </Loggers>
</Configuration>